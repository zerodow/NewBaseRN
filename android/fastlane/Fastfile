platform :android do
  desc "Build a signed APK for a specific flavor"
  lane :build_apk do |options|
    flavor = options[:flavor] || "prod" # Default to prod if no flavor specified

    # Ensure clean Git status
    ensure_git_status_clean

    # Install RN dependencies from project root
    sh "cd .. && npm install"

    # Clean previous builds
    gradle(task: "clean", project_dir: "android")

    # Build the signed APK for the specified flavor
    gradle(
      task: "assemble",
      flavor: flavor.capitalize, # Capitalize flavor (dev -> Dev)
      build_type: "Release",
      project_dir: "android",
      properties: {
        "android.injected.signing.store.file" => ENV["KEYSTORE_FILE"] || "debug.keystore",
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["KEY_PASSWORD"]
      }
    )

    # Output path for APK
    apk_path = "android/app/build/outputs/apk/#{flavor}/release/app-#{flavor}-release.apk"
    puts "APK built successfully at: #{apk_path}"
  end

  desc "Build Dev APK"
  lane :dev do
    build_apk(flavor: "dev")
  end

  desc "Build UAT APK"
  lane :uat do
    build_apk(flavor: "uat")
  end

  desc "Build Prod APK"
  lane :prod do
    build_apk(flavor: "prod")
  end
end